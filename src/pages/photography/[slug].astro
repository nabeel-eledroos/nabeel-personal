---
import { getCollection, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import BackButton from '../../components/BackButton.astro';
import ImageModal from '../../components/ImageModal.astro';
import GridBackground from '../../components/GridBackground.astro';
import background from '../../assets/images/background.svg';
import '../../styles/fonts.css';

export async function getStaticPaths() {
  const allBlogPosts = await getCollection('photoBlog');
  const paths = [];

  for (const post of allBlogPosts) {
    const slug = post.data.assetName;

    paths.push({
      params: { slug },
      props: { post },
    });
  }
  return paths;
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Layout>
  <BackButton href="/photography/Photography" />
  <div class="fade-top"></div>
  <div class="fade-bottom"></div>
  
  <div class="photography-container">
    <GridBackground />
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    
    <h1 class="page-title">{post.data.title}</h1>
    
    <div class="content-container">
      {post ? <Content /> : <p class="page-description">{post.data.description}</p>}
    </div>
  </div>

  <ImageModal id="imageModal" />
</Layout>

<style>
  :root {
    --text-color: #ffffff;
    --accent-color: #888;
  }

  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  .photography-container {
    position: relative;
    margin: 0 auto;
    padding: 30px 20px;
    min-height: 100vh;
  }

  .page-title {
    font-family: "crash", sans-serif;
    font-weight: 600;
    font-size: 70px;
    color: rgba(188, 82, 238, 0.8);
    text-align: center;
    margin: 60px 0 16px;
  }

  .content-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 50px 60px;
  }

  .content-container :global(p) {
    font-family: 'Oswald', sans-serif;
    font-weight: 300;
    font-size: 1.2rem;
    color: var(--text-color);
    text-align: center;
    line-height: 1.8;
    margin: 0 0 24px;
  }

  .page-description {
    font-family: 'Oswald', sans-serif;
    font-weight: 300;
    font-size: 1.1rem;
    color: var(--text-color);
    text-align: center;
    margin: 0 0 40px;
    opacity: 0.8;
  }

  .fade-top,
  .fade-bottom {
    position: fixed;
    left: 0;
    right: 0;
    height: 100px;
    pointer-events: none;
    z-index: 10;
  }

  .fade-top {
    top: 0;
    background: linear-gradient(to bottom, var(--bg-color) 0%, transparent 100%);
  }

  .fade-bottom {
    bottom: 0;
    background: linear-gradient(to top, var(--bg-color) 0%, transparent 100%);
  }

  @media (max-width: 600px) {
    .content-container {
      padding: 0 20px 40px;
    }

    .page-title {
      font-size: 48px;
    }
  }
</style>

<script>
  document.querySelectorAll('.photo-item').forEach((item) => {
    item.addEventListener('click', () => {
      const imagesData = item.getAttribute('data-images');
      if (imagesData) {
        const images = JSON.parse(imagesData);
        (window as any).openImageModal('imageModal', images, 0);
      }
    });
  });
</script>
