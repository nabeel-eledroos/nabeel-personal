---
import Layout from '../../layouts/Layout.astro';
import BackButton from '../../components/BackButton.astro';
import ImageModal from '../../components/ImageModal.astro';
import GridBackground from '../../components/GridBackground.astro';
import background from '../../assets/images/background.svg';
import '../../styles/fonts.css';

const images = import.meta.glob<{ default: ImageMetadata }>('../../assets/photography-assets/*.{jpg,png,jpeg}', { eager: true });

const imageList = Object.entries(images).map(([path, module]) => ({
  src: module.default.src,
  filename: path.split('/').pop() || '',
  width: module.default.width,
  height: module.default.height,
  isLandscape: module.default.width > module.default.height,
}));
---

<Layout>
  <BackButton href="/" />
  <div class="fade-top"></div>
  <div class="fade-bottom"></div>
  
  <div class="photography-container">
    <GridBackground />
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    
    <h1 class="page-title">Photography</h1>
    
    <div class="photo-grid">
      {imageList.map((img) => (
        <div 
          class={`photo-item ${img.isLandscape ? 'landscape' : ''}`}
          data-images={JSON.stringify([img.src])}
        >
          <img 
            src={img.src} 
            alt={img.filename}
            loading="lazy"
          />
        </div>
      ))}
    </div>
  </div>

  <ImageModal id="imageModal" />
</Layout>

<style>
  :root {
    --text-color: #ffffff;
    --accent-color: #888;
  }

  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  .photography-container {
    position: relative;
    margin: 0 auto;
    padding: 30px 20px;
    min-height: 100vh;
  }

  .page-title {
    font-family: "crash", sans-serif;
    font-weight: 600;
    font-size: 70px;
    color: rgba(188, 82, 238, 0.8);
    text-align: center;
    margin: 60px 0 40px;
  }

  .photo-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px 50px;
  }

  .photo-item {
    cursor: pointer;
    overflow: hidden;
    border-radius: 4px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .photo-item.landscape {
    grid-column: 1 / -1;
  }

  .photo-item:hover {
    transform: scale(1.02);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  }

  .photo-item img {
    width: 100%;
    height: auto;
    display: block;
    transition: filter 0.3s ease;
  }

  .photo-item:hover img {
    filter: brightness(1.05);
  }

  .fade-top,
  .fade-bottom {
    position: fixed;
    left: 0;
    right: 0;
    height: 100px;
    pointer-events: none;
    z-index: 10;
  }

  .fade-top {
    top: 0;
    background: linear-gradient(to bottom, var(--bg-color) 0%, transparent 100%);
  }

  .fade-bottom {
    bottom: 0;
    background: linear-gradient(to top, var(--bg-color) 0%, transparent 100%);
  }

  @media (max-width: 600px) {
    .photo-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 400px) {
    .photo-grid {
      grid-template-columns: 1fr;
    }

    .page-title {
      font-size: 48px;
    }
  }
</style>

<script>
  document.querySelectorAll('.photo-item').forEach((item) => {
    item.addEventListener('click', () => {
      const imagesData = item.getAttribute('data-images');
      if (imagesData) {
        const images = JSON.parse(imagesData);
        (window as any).openImageModal('imageModal', images, 0);
      }
    });
  });
</script>
