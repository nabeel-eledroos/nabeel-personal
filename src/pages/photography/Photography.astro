---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import BackButton from '../../components/BackButton.astro';
import ImageModal from '../../components/ImageModal.astro';
import GridBackground from '../../components/GridBackground.astro';
import background from '../../assets/images/background.svg';
import '../../styles/fonts.css';

const highlightImages = import.meta.glob<{ default: ImageMetadata }>('../../assets/photography-assets/*/highlights/*.{jpg,png,jpeg}', { eager: true });

const photoBlogPosts = (await getCollection('photoBlog')).sort(
  (a: any, b: any) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

type Album = {
  slug: string;
  name: string;
  description: string;
  highlights: { src: string; filename: string; width: number; height: number; isLandscape: boolean }[];
};

const albums: Album[] = [];

for (const post of photoBlogPosts) {
  const slug = post.data.assetName;
  const highlights = Object.entries(highlightImages)
    .filter(([path]) => path.includes(`/${slug}/highlights/`))
    .map(([path, module]) => ({
      src: module.default.src,
      filename: path.split('/').pop() || '',
      width: module.default.width,
      height: module.default.height,
      isLandscape: module.default.width > module.default.height,
    }));

  albums.push({
    slug,
    name: post.data.title,
    description: post.data.description,
    highlights,
  });
}
---

<Layout>
  <BackButton href="/" />
  <div class="fade-top"></div>
  <div class="fade-bottom"></div>
  
  <div class="photography-container">
    <GridBackground />
    <img id="background" src={background.src} alt="" fetchpriority="high" />
    
    <h1 class="page-title">Photography</h1>
    
    {albums.map((album) => (
      <div class="album-section">
        <div class="album-info">
          <h2 class="album-title">{album.name}</h2>
          <p class="album-description">{album.description}</p>
          <a href={`/photography/${album.slug}`} class="album-link">View All â†’</a>
        </div>
        <div class="album-highlights">
          {album.highlights.map((img) => (
            <div 
              class={`photo-item ${img.isLandscape ? 'landscape' : ''}`}
              data-images={JSON.stringify(album.highlights.map(h => h.src))}
            >
              <img 
                src={img.src} 
                alt={img.filename}
                data-src={img.src}
                loading="lazy"
              />
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>

  <ImageModal id="imageModal" />
</Layout>

<style>
  :root {
    --text-color: #ffffff;
    --accent-color: #888;
  }

  #background {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    filter: blur(100px);
  }

  .photography-container {
    position: relative;
    margin: 0 auto;
    padding: 30px 20px;
    min-height: 100vh;
  }

  .page-title {
    font-family: "crash", sans-serif;
    font-weight: 600;
    font-size: 70px;
    color: rgba(188, 82, 238, 0.8);
    text-align: center;
    margin: 60px 0 100px;
  }

  .album-section {
    display: flex;
    gap: 40px;
    max-width: 1400px;
    margin: 0 auto 80px;
    padding: 0 50px;
  }

  .album-info {
    flex: 0 0 250px;
    position: sticky;
    top: 120px;
    align-self: flex-start;
  }

  .album-title {
    font-family: "crash", sans-serif;
    font-weight: 600;
    font-size: 36px;
    color: rgba(188, 82, 238, 0.9);
    margin: 0 0 16px;
  }

  .album-description {
    font-family: 'Oswald', sans-serif;
    font-weight: 300;
    font-size: 1rem;
    color: var(--text-color);
    line-height: 1.6;
    margin: 0 0 24px;
  }

  .album-link {
    font-family: 'Oswald', sans-serif;
    font-weight: 400;
    font-size: 1rem;
    color: rgba(188, 82, 238, 0.8);
    text-decoration: none;
    transition: color 0.2s;
  }

  .album-link:hover {
    color: rgba(188, 82, 238, 1);
  }

  .album-highlights {
    flex: 1;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .photo-item {
    cursor: pointer;
    overflow: hidden;
    border-radius: 4px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .photo-item.landscape {
    grid-column: 1 / -1;
  }

  .photo-item:hover {
    transform: scale(1.02);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4);
  }

  .photo-item img {
    width: 100%;
    height: auto;
    display: block;
    transition: filter 0.3s ease;
  }

  .photo-item:hover img {
    filter: brightness(1.05);
  }

  .fade-top,
  .fade-bottom {
    position: fixed;
    left: 0;
    right: 0;
    height: 100px;
    pointer-events: none;
    z-index: 10;
  }

  .fade-top {
    top: 0;
    background: linear-gradient(to bottom, var(--bg-color) 0%, transparent 100%);
  }

  .fade-bottom {
    bottom: 0;
    background: linear-gradient(to top, var(--bg-color) 0%, transparent 100%);
  }

  @media (max-width: 1024px) {
    .album-section {
      flex-direction: column;
      gap: 24px;
    }

    .album-info {
      position: static;
      flex: none;
    }

    .album-highlights {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .album-highlights {
      grid-template-columns: 1fr;
    }

    .page-title {
      font-size: 48px;
    }

    .album-section {
      padding: 0 20px;
    }
  }
</style>

<script>
  document.querySelectorAll('.photo-item').forEach((item) => {
    item.addEventListener('click', () => {
      const imagesData = item.getAttribute('data-images');
      if (imagesData) {
        const images = JSON.parse(imagesData);
        (window as any).openImageModal('imageModal', images, 0);
      }
    });
  });
</script>
